<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/data_transaksi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Transaksi.Data_transaksi">

    <LinearLayout
        android:id="@+id/Head"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvDataPelanggan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/data_pelanggan"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:layout_marginBottom="2dp"/>

        <!-- Baris Nama Pelanggan -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tvNamaPelanggantext1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingBottom="2dp"
                android:text="@string/pelanggan_nama"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="16sp"
                android:textColor="@color/text_color"
                android:paddingBottom="2dp" />

            <TextView
                android:id="@+id/tvNamaPelanggan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/text_color"
                android:paddingBottom="2dp"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <!-- Baris No HP -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tvNoHptext1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingBottom="2dp"
                android:text="@string/nohp"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="16sp"
                android:textColor="@color/text_color"
                android:paddingBottom="2dp" />

            <TextView
                android:id="@+id/tvNoHp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/text_color"
                android:paddingBottom="2dp"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnPilihPelanggan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pilih_pelanggan"
            android:backgroundTint="@color/backinverse"
            android:textSize="15sp"
            android:textColor="@color/textinverse"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/tvDataLayanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/layanan_utama"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_color"
            android:layout_marginBottom="2dp"/>

        <!-- Baris Layanan -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tvLayanantext1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/Layanan"
                android:textSize="16sp"
                android:textColor="@color/text_color"
                android:paddingBottom="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="16sp"
                android:textColor="@color/text_color"
                android:paddingBottom="2dp" />

            <TextView
                android:id="@+id/tvLayanan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/text_color"
                android:paddingBottom="2dp"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <!-- Baris Harga -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tvHargatext1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/harga"
                android:textSize="16sp"
                android:textColor="@color/text_color"
                android:paddingBottom="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="16sp"
                android:textColor="@color/text_color"
                android:paddingBottom="2dp" />

            <TextView
                android:id="@+id/tvHarga"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/text_color"
                android:paddingBottom="2dp"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnPilihLayanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pilih_layanan"
            android:backgroundTint="@color/backinverse"
            android:textSize="15sp"
            android:textColor="@color/textinverse"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/tvTambahLayanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/layanan_tambahan"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_color"
            android:layout_marginBottom="2dp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDataPelanggan"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/Head"
        app:layout_constraintBottom_toTopOf="@+id/footerButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        tools:listitem="@layout/cardview_tambahan_transaksi"/>

    <LinearLayout
        android:id="@+id/footerButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/rvDataPelanggan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnTambahan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tambahan"
            android:backgroundTint="@color/backinverse"
            android:textSize="15sp"
            android:textColor="@color/textinverse"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnProses"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/proses"
            android:backgroundTint="@color/backinverse"
            android:textSize="15sp"
            android:textColor="@color/textinverse" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

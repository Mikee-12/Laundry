<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="18dp"
    tools:context="pegawai.tambahan_pegawai">

    <TextView
        android:id="@+id/tvTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TAMBAH PELANGGAN"
        android:textStyle="bold"
        android:textSize="27sp"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvNL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvTP"
        android:layout_marginTop="15dp"
        android:text="Nama Lengkap"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/etNL"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tvNL"
        android:hint="Nama Lengkap"
        android:background="@drawable/et"
        android:padding="8dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/etNL"
        android:layout_marginTop="15dp"
        android:text="Alamat"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/etA"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tvA"
        android:hint="Alamat"
        android:background="@drawable/et"
        android:padding="8dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvNH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/etA"
        android:layout_marginTop="15dp"
        android:text="No HP Aktif"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/etNH"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tvNH"
        android:hint="No HP"
        android:background="@drawable/et"
        android:padding="8dp"
        android:layout_marginTop="8dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/etNH"
        android:layout_marginTop="50dp"
        android:background="@drawable/et"
        android:backgroundTint="@color/black"
        android:text="Simpan"
        android:textColor="@color/white"
        android:textSize="20sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tambah_cabang"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="18dp"
    android:background="@color/background"
    tools:context=".cabang.Tambahan_cabang">

    <TextView
        android:id="@+id/tvTambahCabang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tambah_cabang"
        android:textStyle="bold"
        android:textSize="27sp"
        android:textColor="@color/text_color"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvNamaCabang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTambahCabang"
        android:layout_marginTop="15dp"
        android:text="@string/nama_cabang"
        android:textColor="@color/text_color"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/etNamaCabang"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tvNamaCabang"
        android:hint="@string/nama_cabang"
        android:inputType="text"
        android:background="@drawable/et"
        android:padding="8dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/etNamaCabang"
        android:layout_marginTop="15dp"
        android:text="@string/namamanager"
        android:textColor="@color/text_color"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/etManager"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tvManager"
        android:hint="@string/namamanager"
        android:inputType="textCapSentences"
        android:background="@drawable/et"
        android:padding="8dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvAlamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/etManager"
        android:layout_marginTop="15dp"
        android:text="@string/alamat"
        android:textColor="@color/text_color"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/etAlamat"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tvAlamat"
        android:hint="@string/alamat"
        android:inputType="textPostalAddress"
        android:background="@drawable/et"
        android:padding="8dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvNoHp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/etAlamat"
        android:layout_marginTop="15dp"
        android:text="@string/nohp"
        android:textColor="@color/text_color"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/etNoHp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tvNoHp"
        android:hint="@string/nohp"
        android:inputType="number"
        android:background="@drawable/et"
        android:padding="8dp"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnSimpan"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/etNoHp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/backinverse"
        android:text="@string/simpan"
        android:textColor="@color/textinverse"
        android:textSize="18sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
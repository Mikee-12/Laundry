<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/transaksi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".transaksi">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="515dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Data Pelanggan"
                android:textColor="@color/text_color"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="15dp"
                android:text="Nama Pelanggan :"
                android:textColor="@color/text_color"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="8dp"
                android:text="No HP :"
                android:textColor="@color/text_color"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonpickpelanggan"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/backinverse"
                android:text="Pilih Pelanggan"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="20dp"
                android:text="Layanan Utama"
                android:textColor="@color/text_color"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="15dp"
                android:text="Nama Layanan :"
                android:textColor="@color/text_color"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="8dp"
                android:text="Harga :"
                android:textColor="@color/text_color"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonpicklayanan"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/backinverse"
                android:text="Pilih Layanan"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="20dp"
                android:text="Layanan Tambahan"
                android:textColor="@color/text_color"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="295dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp">

        <Button
            android:layout_width="195dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/backinverse"
            android:text="Pilih Pelanggan"
            android:layout_marginTop="8dp"
            android:textSize="15sp"
            android:layout_marginEnd="2.5dp"/>
        <Button
            android:layout_width="195dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/backinverse"
            android:text="Pilih Pelanggan"
            android:layout_marginTop="8dp"
            android:layout_marginStart="2.5dp"
            android:textSize="15sp"/>
    </LinearLayout>
</LinearLayout>
